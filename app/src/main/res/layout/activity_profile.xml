<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_background"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="?attr/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/app_avatar"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:src="@drawable/red_white_cat_i_white_studio"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="95dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"/>


    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:text="user_name"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="95dp"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <RelativeLayout
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="Change Password"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                app:srcCompat="@drawable/iconmonstr_angel_right_thin_240" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />
        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="Setting"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                app:srcCompat="@drawable/iconmonstr_angel_right_thin_240" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />
        <RelativeLayout
            android:id="@+id/reminder_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="Reminder Setting"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                app:srcCompat="@drawable/iconmonstr_angel_right_thin_240" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Log Out"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/profile_home"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/list"
            app:tint="#ffffff"/>

        <ImageButton
            android:id="@+id/profile_add"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="?attr/colorPrimary"
            app:srcCompat="@drawable/add_white" />

        <ImageButton
            android:id="@+id/profile_profile"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/md_theme_light_surface"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>

</RelativeLayout>