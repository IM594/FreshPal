<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正常状态 -->
    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@android:color/white" /> <!-- 背景颜色：白色 -->
            <item android:drawable="?attr/colorPrimary" /> <!-- 图标颜色：colorPrimary -->
        </layer-list>
    </item>

    <!-- 按下状态 -->
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item android:drawable="?attr/colorPrimary" /> <!-- 背景颜色：colorPrimary -->
            <item android:drawable="@android:color/white" /> <!-- 图标颜色：白色 -->
        </layer-list>
    </item>

    <!-- 选中状态 -->
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item android:drawable="?attr/colorPrimary" /> <!-- 背景颜色：colorPrimary -->
            <item android:drawable="@android:color/white" /> <!-- 图标颜色：白色 -->
        </layer-list>
    </item>

    <!-- 默认状态 -->
    <item>
        <layer-list>
            <item android:drawable="@android:color/white" /> <!-- 背景颜色：白色 -->
            <item android:drawable="?attr/colorPrimary" /> <!-- 图标颜色：colorPrimary -->
        </layer-list>
    </item>
</selector>
