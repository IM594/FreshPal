<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层：灰色边框 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#808080" /> <!-- 设置边框颜色 -->
            <corners android:radius="5dp" /> <!-- 设置圆角半径，根据需要调整值 -->
        </shape>
    </item>
    <!-- 上层：实际图像（ImageButton） -->
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardview_light_background" /> <!-- 设置背景颜色 -->
            <corners android:radius="5dp" /> <!-- 设置圆角半径，根据需要调整值 -->
        </shape>
    </item>
</layer-list>
